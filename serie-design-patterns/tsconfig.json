{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",

    /* Modules */
    "module": "CommonJS",
    "rootDir": ".",
    "baseUrl": "src/",
    "moduleResolution": "node",
    "outDir": "./lib",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
